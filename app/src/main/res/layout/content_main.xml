<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:id="@+id/content_main"
    android:paddingTop="@dimen/activity_vertical_margin"
   android:background="@drawable/actibarperso"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.MainActivity"
    tools:showIn="@layout/app_bar_main"    >

    <FrameLayout
        android:id="@+id/container_main_menu_ft"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:id="@+id/lvLivro"
        android:dividerHeight="0dp"
            android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="0dp"
        android:drawSelectorOnTop="false"
        android:divider="@color/colorSS"
            android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
            android:typeface="sans"
            android:layout_marginTop="0dp"
            android:layout_above="@+id/publisherAdView"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_palavra_dia"
            android:id="@+id/btnPalavra"
            android:background="@drawable/item_seletor"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="5dp" />

    </FrameLayout>

    <!--<com.google.android.gms.ads.doubleclick.PublisherAdView
        android:id="@+id/AdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.doubleclick.PublisherAdView> -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtPalavras"
        android:textSize="45sp"
        android:onClick="clicadoPalavra"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="60dp"
        android:text=""
        android:gravity="center"
        android:layout_alignParentStart="false"
         />

</RelativeLayout>
